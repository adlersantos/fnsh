<div class="col-md-4">
  <h2>Sign Up</h2>
  <form action="/session" method="post" role="form">
    <div class="form-group">
      <label for="username">Username:</label> <br>
      <input type="text" name="user[username]" id="username" class="form-control" placeholder="Username" >
    </div>
    <div class="form-group">
      <label for="password">Password:</label> <br>
      <input type="password" name="user[password]" id="password" class="form-control" placeholder="Password">
    </div>
    <div class="form-group">
      <input type="submit" value="Sign up" class="btn btn-primary btn-small" />
    </div>
    <p>
    Already have an account? <%= link_to "Login here.", new_session_path %>
    </p>
  </form>
</div>
