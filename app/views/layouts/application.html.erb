<!DOCTYPE html>
<html>
<head>
  <title>Basecamp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <% if current_user %>
      <div class="row">
        <div class="col-md-3">
          You are logged in as <strong><%= current_user.username %></strong>
          <%= button_to "Logout", session_path, :method => "delete", :class => "btn btn-primary btn-xs" %>
        </div> <br>

        <div class="errors">
          <% flash[:errors].try(:each) do |error| %>
            <%= error %>
          <% end %>
        </div> <br>
      </div>
      <hr>
      <div class="row">
        <div class="projects col-md-3"></div>
        <div class="col-md-1"></div>
        <div class="project col-md-7">
<!--           <div class="project col-md-5"></div>
          <div class="project-sidebar col-md-2"></div>
 -->        </div>
      </div>
    <% else %>
      <div class="row">
        <%= yield %>
      </div>
    <% end %>
  </div>
</body>
</html>
