<h4>Projects</h4>
<hr>
<% projects.each(function (project) { %>
  <div class="project-row row" project-id="<%= project.escape('id') %>">
    <a class="project-link col-md-2" project-id="<%= project.escape('id') %>" href="#"><%= project.escape('name') %></a>
  </div>
<% }) %>

<br>
<a href="#" class="create-project">Create project</a>

<script>
  $('.project-row').hover(
    function () {
      var deleteButton ="<a class='delete-project' project-id='"
                       + BC.getID(this, 'project')
                       + "' href='#' style='float:right;'>Delete</a>";
      $(this).append($(deleteButton));
    },
    function () {
      $(this).find('.edit-project').remove();
      $(this).find('.delete-project').remove();
    });
</script>