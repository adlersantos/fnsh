<h3 class="light-blue">
  Task Lists
  <a href="#" class="put-task-list-form pull-right"><small>Create task list</small></a>
</h3>

<form style="margin-top:10px; margin-bottom:10px;" class="create-task-list form-inline hidden" role="form">
  <div class="form-group">
    <input type="text" name="task_list[title]"
           class="input-sm form-control wd-250" placeholder="Give the list a title">
  </div>
  <button type="submit" class="create-task-list btn btn-primary btn-sm">Create task list</button>
  <button type="button" class="cancel-create-task-list btn btn-primary btn-sm">
    <span class="glyphicon glyphicon-remove"></span>
  </button>
</form>

<div class="task-lists well">

  <% if (taskLists.length > 0) { %>
    <% taskLists.each(function (taskList) { %>
    <div class="task-list" task-list-id="<%= taskList.get('id') %>">
      <div class="task-list-<%= taskList.escape('id') %>"></div>
      <div class="ht-10"></div>
    </div>
    <% }) %>
  <% } else { %>
    <h4 class="text-muted text-center">You have no task lists.</h4>
  <% } %>
</div>

<script>
  $( ".task-lists" ).sortable({
    axis: 'y',
    placeholder: "sortable-placeholder",
    opacity: 0.7,
    forcePlaceholderSize: true,
    tolerance: "pointer",
    handle: ".panel-heading",
    items: "div.task-list"
  });
  $( ".task-lists" ).disableSelection();
</script>