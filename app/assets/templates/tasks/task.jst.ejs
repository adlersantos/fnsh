  <div class="task" style="height:20px; cursor:pointer;">
    <input type="checkbox" task-id="<%= task.escape('id') %>"
           value="task" class="task-checkbox"
           style="margin: 0 5px 0;">
           <span class="task-name" style="padding-bottom:6px;" task-id="<%= task.escape('id') %>"><%= task.escape('name') %></span>
    <span class="delete-task pull-right" task-id="<%= task.escape('id') %>">&times;</span>
  </div>
