<% if (task.get('finished') === true) { %>

  <span class="col-md-1 text-muted glyphicon glyphicon-th ml-0 pl-0"></span>
  <input type="checkbox" task-id="<%= task.escape('id') %>"
         value="task" class="task-checkbox col-md-1" checked>
  <span class="col-md-1 ml-0 pl-0">
    <% if (assignee) { %>
      <img src="<%= assignee %>" class="task-avatar"/>
    <% } else { %>
      &#8212;
    <% } %>
  </span>

  <span class="task-name line-through text-muted col-md-9 va-middle no-padding"
        task-id="<%= task.escape('id') %>">
    <%= task.escape('name') %>
  </span>
  <form style="display:inline" class="rename-inline-task hidden form-inline" role="form">
    <div class="form-group">
      <input autofocus type="text" class="task-name open-text-input form-control"
             name="task[name]" placeholder="Enter task name"
             value="<%= task.escape('name') %>">
    </div>
    <button type="submit" class="rename-inline-task btn btn-primary btn-xs">rename</button>
    <button type="button" class="cancel-inline-rename-task btn btn-primary btn-xs">
      <span class="glyphicon glyphicon-remove"></span>
    </button>
  </form>

  <span class="delete-task pull-right" task-id="<%= task.escape('id') %>">&times;</span>

<% } else { %>

  <span class="col-md-1 text-muted glyphicon glyphicon-th ml-0 pl-0"></span>
  <input type="checkbox" task-id="<%= task.escape('id') %>"
         value="task" class="task-checkbox col-md-1">
  <span class="col-md-1 ml-0 pl-0">
    <% if (assignee) { %>
      <img src="<%= assignee %>" class="task-avatar"/>
    <% } else { %>
      &#8212;
    <% } %>
  </span>

  <span class="task-name col-md-9 va-middle no-padding" task-id="<%= task.escape('id') %>">
    <%= task.escape('name') %>
  </span>
  <form style="display:inline" class="rename-inline-task hidden form-inline" role="form">
    <div class="form-group">
      <input autofocus type="text" name="task[name]" value="<%= task.escape('name') %>"
             class="task-name open-text-input form-control" placeholder="Enter task name">
    </div>
    <button type="submit" class="rename-inline-task btn btn-primary btn-xs">rename</button>
    <button type="button" class="cancel-inline-rename-task btn btn-primary btn-xs">
      <span class="glyphicon glyphicon-remove"></span>
    </button>
  </form>

  <span class="delete-task pull-right" task-id="<%= task.escape('id') %>">&times;</span>

<% } %>